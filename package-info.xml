<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>LiamHammett:XFire</id>
	<name>XFire Profile Modification</name>
	<version>2.5</version>
	<type>modification</type>

	<install for="2.0 RC2">
		<modification>install-2.0.xml</modification>
		<modification>languages.xml</modification>
		<require-file name="xfire.gif" destination="$imagesdir" />
		<code>install.php</code>
	</install>

	<uninstall for="2.0 RC2">
		<modification reverse="true">install-2.0.xml</modification>
		<modification reverse="true">languages.xml</modification>
		<remove-file name="$imagesdir/xfire.gif" />
	</uninstall>
</package-info>
